{
  "manifest_version":2,
  "name":"Bookmark Notes",
  "description":"Stores user configurable notes for bookmark entries",
  "version":"0.9.0",
  "developer":{
    "name":"Jase",
    "url":"https://github.com/emmyemi/bookmark-notes-webextension"
  },

  "applications":{
    "gecko":{
      "id":"bookmark-notes@winter.coffee",
      "strict_min_version":"60.0"
    }
  },

  "permissions":[
    "bookmarks",
    "storage"
  ],

  "background":{
    "scripts":["background.js"]
  },

  "browser_action":{
    "default_title":"Bookmark Notes",
    "default_popup":"pages/panel.html",
    "default_icon":{
      "38":"img/icon.png"
    }
  },

  "sidebar_action":{
    "default_title":"Bookmark Notes",
    "default_panel":"pages/panel.html",
    "default_icon":"img/icon.png"
  }
}